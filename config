#|   Custom settings   |
#+=====================+

# Activate i3lock after 25 minutes of inactivity
exec xautolock -time 25 -locker '/home/ivo/.config/i3/i3_lock_tty.sh' &
exec xautolock -time 30 -locker "systemctl suspend" &

# Custom keybinds
# Switch between different keyboard layouts
exec --no-startup-id setxkbmap -model pc104 -layout us,bg,de -variant ,bas_phonetic, -option grp:alt_shift_toggle,grp_led:scroll

# Screen lock
bindsym Control+Mod1+l exec --no-startup-id /home/sleepyme/.config/i3/i3_lock_tty.sh

# Pulse Audio controls
# Increase Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
# Decrease volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%

# Sreen brightness controls
# Increase screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20
# Decrease screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20

# Set default workspaces for certain programs
for_window [class="Emacs"] move workspace "1:"
for_window [class="Firefox"] move workspace "3:"
for_window [class="Steam"] move workspace "4:"

# Set background image
exec --no-startup-id feh --bg-scale /home/sleepyme/Pictures/assassins_creed_iv_black_flag_assassin_pirate_edward_kenway_95415_1920x1080.jpg

# Startup programms
exec --no-startup-id emacs&

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        font pango:inconsolata 11
	separator_symbol ""
	strip_workspace_numbers yes

	# disable clicking on workspace buttons
	bindsym button1 nop

	colors {
	    separator  #e1315b
	    background #1c1721
	    statusline #9bc53d
	    focused_workspace #e1315b #FFB445 #0C0732
	    active_workspace #fdf6e3 #6c71c4 #fdf6e3
	    inactive_workspace #4262b7 #233237 #c0b2b5
	    urgent_workspace #d33682 #d33682 #fdf6e3
  }
